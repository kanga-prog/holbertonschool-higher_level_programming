#!/usr/bin/python3
"""
Script that lists all states with a name starting
with 'N' from a MySQL database.
It takes three arguments: mysql username, mysql password, and database name.
The results are sorted by states.id in ascending order.
"""

import MySQLdb
import sys

if __name__ == "__main__":
    """
    Main function to connect to MySQL, execute the query and list states
    starting with 'N' ordered by their id.
    """
    
    # Dictionnaire avec les informations de connexion
    db_config = {
        "username": sys.argv[1],  # Nom d'utilisateur MySQL
        "password": sys.argv[2],  # Mot de passe MySQL
        "database": sys.argv[3]   # Nom de la base de données
    }

    # Connexion à la base de données MySQL en utilisant les valeurs du dictionnaire
    db = MySQLdb.connect(
        host="localhost",
        port=3306,
        user=db_config["username"],  # Utiliser le nom d'utilisateur du dictionnaire
        passwd=db_config["password"],  # Utiliser le mot de passe du dictionnaire
        db=db_config["database"]      # Utiliser la base de données du dictionnaire
    )

    # Création du curseur pour exécuter la requête
    cursor = db.cursor()

    # Exécution de la requête pour récupérer les états dont le nom commence par 'N'
    cursor.execute("SELECT * FROM states WHERE name LIKE 'N%' ORDER BY id ASC")

    # Récupérer toutes les lignes du résultat de la requête
    states = cursor.fetchall()

    # Afficher chaque état
    for state in states:
        print(state)

    # Fermer le curseur et la connexion à la base de données
    cursor.close()
    db.close()
